var latitude = "";
var longitude = "";

var getLocation = function(){
	if (Ti.Geolocation.getLocationServicesEnabled === true){
		Ti.Geolocation.getCurrentPosition(function(evt){
			var os = Ti.Platform.osname;
			if(os != "android"){
				latitude = evt.coords.latitude;
				longitude = evt.coords.longitude;
			} else {
				latitude = 52.3446210203006;
				longitude = 0.511250495910645;
			};
		});
	} else {
		Ti.Geolocation.purpose = "Please enable location services on this device. This application cannot run without them enabled.";
	};
};

var urlAPI = "http://api.wunderground.com/api/4af8df4427496b2f/conditions/forecast/q/" + latitude + "," + longitude + ".json";
var getNetCheck = require("netCheck");

Ti.Database.install("/database/localDataDB.sqlite", "localData");

console.log(getLocation);

getNetCheck.checkNet(urlAPI);

var window = Ti.UI.createWindow({
	backgroundColor: "#09f"
});

window.open();