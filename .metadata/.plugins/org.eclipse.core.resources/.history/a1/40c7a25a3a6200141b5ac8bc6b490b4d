var getLocation = function(){
	Ti.Geolocation.getCurrentPosition(function(evt){
		if(Ti.Platform.osname != "android"){
			var location = {
				lat: evt.coords.latitude,
				lon: evt.coords.longitude
			};
		}else{
			var location = {
				lat: 38.5812700,
				lon: 121.4944000
			};
		};
		exports.lat = location.lat;
		exports.lon = location.lon;
}
};