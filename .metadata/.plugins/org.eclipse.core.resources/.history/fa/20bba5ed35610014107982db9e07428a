var buildUI = function(icon){
	var backGround = Ti.UI.createView({
		top: 160,
		backgroundColor: "#aaa",
		height: "45%",
		width: "80%",
		opacity: .8,
		borderRadius: 15
	});
	
	var iconBG = Ti.UI.createView({
		top: 145,
		backgroundColor: "#444",
		width: 80,
		height: 52,
		borderRadius: 15
	});
	
	var patch = Ti.UI.createView({
		backgroundColor: "#09f",
		top: 145,
		width: 80,
		height: 15
	});
	
	var iconImage = Ti.UI.createImageView({
		image: icon,
		top: 148,
		width: 65,
		height: 65
	});
	
	window.add(backGround);
	window.add(iconBG);
	window.add(patch);
	window.add(iconImage);
};
exports.buildUI = buildUI;