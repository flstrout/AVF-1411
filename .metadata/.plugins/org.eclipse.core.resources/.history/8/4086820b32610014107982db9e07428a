var buildUI = function(icon){
	var iconImage = Ti.UI.createImageView({
		image: icon,
		top: 20,
		width: 55,
		height: 55
	});
	
	var mainView = Ti.UI.createView({
		top: "30%",
		backgroundColor: "#222",
		opacity: "50%"
	});
	
	mainView.add(iconImage);
	window.add(mainView);
};
exports.buildUI = buildUI;