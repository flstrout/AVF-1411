var buildUI = function(icon){
	var mainView = Ti.UI.createView({
		top: "20%",
		backgroundColor: "#222",
		width: "80%",
		height: "35%",
		opacity: .2
	});
	
	var iconImage = Ti.UI.createImageView({
		image: icon,
		top: mainView.top + 5,
		width: 55,
		height: 55
	});
	
	window.add(mainView);
	window.add(iconImage);
};
exports.buildUI = buildUI;