Ti.Database.install("/database/timezone.sqlite","local");var background=require("background"),day=1,date="",getDate=require("date"),load=require("load");getDate.todayDate(day);var urlAPI="http://api.tvmaze.com/schedule?country=US&date="+date,loadData=function(){load.loadIt(urlAPI),splash.close()},lblSplash=Ti.UI.createLabel({text:"Welcome to the Prime Time\nChannel Lineup App\nPress 'OK' to proceed.",font:{fontWeight:"bold",fontSize:16},top:6,textAlign:"center"}),btnSplash=Ti.UI.createLabel({backgroundColor:"#6fc",borderColor:"#222",borderRadius:4,text:"OK",textAlign:"center",font:{fontWeight:"bold",fontSize:18},top:75,width:120,height:35});btnSplash.addEventListener("click",loadData);var splash=Ti.UI.createWindow({title:"Welcome to the Prime Time\nChannel Lineup App\nPress 'OK' to proceed.",width:240,height:120,backgroundColor:"#fff",opacity:.9,top:"28%",borderRadius:7});splash.add(btnSplash),splash.add(lblSplash),splash.open();